<article class="card border rounded-lg shadow p-4">
	{% if image %}
		<img src="{{ image }}" alt="{{ title }}" class="mb-4 rounded-md w-full">
	{% endif %}

	{% if title %}
		<h3 class="text-xl font-bold mb-2">
			{% if url %}
				<a href="{{ url }}" class="hover:underline">{{ title }}</a>
			{% else %}
				{{ title }}
			{% endif %}
		</h3>
	{% endif %}

	{% if body %}
		<p class="text-gray-700">{{ body }}</p>
	{% endif %}
</article>
